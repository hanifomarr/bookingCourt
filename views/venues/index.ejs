<% layout("layouts/boilerplate") -%>
    <h1>ALL VENUES</h1>
    <% for(let venue of venues){ %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="image-fluid" src="<%= venue.img %>" alt="" style="width: 22rem;">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= venue.name %>
                        </h5>
                        <p class="card-text">
                            <%= venue.location %>
                        </p>
                        <a href="/venue/<%= venue._id %>" class="btn btn-primary">Show</a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>


            <a href="/venue/new">Add new venue</a>